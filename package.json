{
	"name": "oksai-saas-api-archi",
	"version": "0.1.0",
	"description": "Oksai SaaS Platform API Architecture",
	"license": "AGPL-3.0",
	"private": true,
	"keywords": [],
	"scripts": {
		"prebuild": "rimraf dist coverage",
		"clean:turbo": "pnpm exec rimraf dist tmp .turbo",
		"clean:all": "pnpm exec rimraf dist tmp coverage .cache .turbo",
		"affected:build": "pnpm turbo run build --affected",
		"affected:test": "pnpm turbo run test --affected",
		"affected:lint": "pnpm turbo run lint --affected",
		"build": "pnpm turbo run build",
		"lint": "pnpm turbo run lint",
		"lint:fix": "pnpm turbo run lint:fix",
		"format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
		"format:write": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
		"format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
		"dep-graph": "pnpm turbo dep-graph",
		"help": "pnpm turbo help",
		"typecheck": "pnpm turbo run typecheck",
		"test": "pnpm turbo run test",
		"libs:fix": "pnpm dlx sherif@latest --fix",
		"lsof-kill": "lsof -ti :3000 | xargs kill -9 2>/dev/null; sleep 1; echo '端口 3000 已清理'"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3.2.0",
		"@eslint/js": "^9.18.0",
		"@types/jest": "^30.0.0",
		"@types/node": "^22.10.7",
		"@typescript-eslint/parser": "^8.56.0",
		"cspell": "^6.18.1",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-prettier": "^5.2.2",
		"globals": "^16.0.0",
		"jest": "^30.0.0",
		"lint-staged": "^10.4.0",
		"prettier": "^3.4.2",
		"rimraf": "^6.0.1",
		"ts-jest": "^29.2.5",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"turbo": "^2.0.0",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.56.0"
	},
	"prettier": {
		"printWidth": 120,
		"singleQuote": true,
		"semi": true,
		"useTabs": true,
		"tabWidth": 4,
		"arrowParens": "always",
		"trailingComma": "none",
		"quoteProps": "as-needed",
		"trimTrailingWhitespace": true
	},
	"packageManager": "pnpm@10.12.1",
	"engines": {
		"node": ">=20"
	}
}
